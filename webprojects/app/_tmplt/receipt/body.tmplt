<div id="receipt-view" class={{height_class}}>
	<p class="instructions">Select your items:</p>

	<div class="receipt" style="height: {{receipt_height}}em">
		[[items]]
	</div>

	<a class="all">Select all</a>
	<a class="none">Deselect all</a>

	<div class="summary">
		[[summaries]]
	</div>

	<a class="confirm">Next</a>
</div>
